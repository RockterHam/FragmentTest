<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mine_ivUserBackground"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#6699ff" />

            <View
                android:id="@+id/mine_viUserViewVertical"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/mine_ivUserPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_mine_on" />

            <View
                android:id="@+id/mine_viUserViewHorizon"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_below="@id/mine_viUserViewVertical"
                android:layout_toRightOf="@id/mine_ivUserPhoto" />

            <TextView
                android:id="@+id/mine_tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/mine_viUserViewVertical"
                android:layout_toRightOf="@id/mine_viUserViewHorizon"
                android:gravity="center"
                android:text="洛克踏"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/mine_ivUserInfo"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/into_icon" />


        </RelativeLayout>

        <View
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#fff">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="13"
                    android:textColor="#000"
                    android:textSize="23sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="消息"
                    android:textColor="#777"
                    android:textSize="20sp"/>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="2"
                    android:textColor="#000"
                    android:textSize="23sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="关注"
                    android:textColor="#777"
                    android:textSize="20sp"/>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="10"
                    android:textColor="#000"
                    android:textSize="23sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="收藏"
                    android:textColor="#777"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tvMenu_SchoolContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp" />

                <ImageView
                    android:id="@+id/mine_ivMenu_SchoolContent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/into_icon" />

            </RelativeLayout>

            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tvMenu_GroupContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的团购"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/mine_ivMenu_GroupContent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/into_icon" />

            </RelativeLayout>

            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tvMenu_ClassContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的计划"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/mine_ivMenu_ClassContent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/into_icon" />

            </RelativeLayout>

            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1px"/>


        </LinearLayout>
        
    </LinearLayout>



</FrameLayout>